{
    "name": "asciidoctor-vscode",
    "displayName": "AsciiDoc",
    "description": "Live preview (using AsciiDoctor) and syntax highlighting.",
    "version": "0.3.3",
    "publisher": "joaompinto",
    "author": "Jo√£o Pinto <lamego.pinto@gmail.com>",
    "license": "MIT",
    "readme": "README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/joaompinto/asciidoctor-vscode"
    },
    "galleryBanner": {
        "color": "#78d6f0",
        "theme": "light"
    },
    "bugs": "https://github.com/joaompinto/asciidoctor-vscode/issues",
    "homepage": "https://github.com/joaompinto/asciidoctor-vscode/blob/master/README.md",
    "icon": "images/icon.png",
    "main": "./out/extension",
    "engines": {
		"vscode": "^1.12.2"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onCommand:asciidoc.showPreview",
        "onCommand:asciidoc.showPreviewToSide"
    ],
    "contributes": {
        "languages": [
            {
                "id": "asciidoc",
                "aliases": [
                    "AsciiDoc",
                    "AsciiDoc(tor)"
                ],
                "extensions": [
                    ".adoc",
                    ".asciidoc"
                ]
            }
        ],
        "grammars": [
            {
                "language": "asciidoc",
                "scopeName": "text.asciidoc",
                "path": "./syntaxes/Asciidoctor.tmLanguage"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "AsciiDoc Option Configuration",
            "properties": {
                "AsciiDoc.html_generator": {
                    "type": "string",
                    "default": "asciidoctor -o-",
                    "description": "command to be used for the HTML generation"
                }
            }
        },
        "keybindings": [
            {
                "command": "asciidoc.showPreview",
                "key": "ctrl+shift+r",
                "when": "editorTextFocus"
            },
            {
                "command": "asciidoc.showPreviewToSide",
                "key": "ctrl+k r",
                "when": "editorTextFocus"
            }
        ],
		"menus": {
			"editor/title": [
				{
					"when": "editorLangId == asciidoc",
					"command": "asciidoc.showPreviewToSide",
					"alt": "asciidoc.showPreview",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"when": "resourceLangId == markdown",
					"command": "asciidoc.showPreview",
					"group": "navigation"
				}
			]
		},
        "commands": [
            {
                "command": "asciidoc.showPreview",
                "title": "Toggle Preview",
                "category": "AsciiDoc"
            },
            {
                "command": "asciidoc.showPreviewToSide",
                "title": "Open Preview to the Side",
                "category": "AsciiDoc"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "./node_modules/.bin/tsc -p ./",
        "compile": "./node_modules/.bin/tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "file-url": "^1.0.1",
        "tmp": "^0.0.29",
        "vscode-nls": "^2.0.2"
    },
	"devDependencies": {
        "typescript": "^2.0.3",
		"@types/node": "^7.0.4"
	}
}